<!DOCTYPE html>
<html>
<head>
  <title>piu piu</title>
  <link rel="icon" href="/images/favicon_piupiu-01.png" type="image/ico" />
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>

<!-- Layout -->
<div class="balken oben"></div>
<div class="balken unten"></div>
<%= link_to "", root_path, { :class => "piupiu" } %>

<% if user_signed_in? and !current_page?(:controller => "high_voltage/pages", :action => "show", :id => "index")%>
  <!-- menubar -->
  <%= link_to "", user_root_path, :class => current_page?(:controller => user_root_path) ? ["rahmen_profilbild","aktiv"] : "rahmen_profilbild" %>
  <%= link_to "", "/overview.html", :class => "overview_link" %>
  <%= link_to "", new_user_post_path(current_user.id), :class => current_page?(:controller => "/posts", :action => "new", :user_id => current_user.id) ? ["new_post","aktiv"] : "new_post" %>
  <%= link_to "", destroy_user_session_path, :class => "logout" %>
<% end %>
<%= link_to "", page_path("wtf"), :class => current_page?(:controller => "high_voltage/pages", :action => "show", :id => "wtf") ? ["wtf","aktiv"] : "wtf" %>
<%= link_to "", page_path("impressum"), :class => current_page?(:controller => "high_voltage/pages", :action => "show", :id => "impressum") ? ["impressum","aktiv"] : "impressum" %>

<%= yield %>

</body>
</html>
