.container_change_pw
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :id => "pw_aendern" }) do |f|
    %table
      %tr
        %td
          %img{ :src => "pw_falsch-17.png" }
        %td
          = f.password_field :current_password, :size => "29", :class => "feld"
      %tr
        %td
          %img{ :src => "pw-17.png" }
        %td
          = f.password_field :password, :size => "29", :class => "feld"
      %tr
        %td
          %img{ :src => "pw-17.png" }
        %td
          = f.password_field :password_confirmation, :size => "29", :class => "feld"
    = f.submit "", :class => "submit"